{% extends ':admin:base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <a class="btn btn-primary" href="{{ path('new_admin_product') }}" role="button">Add Product</a>
        </div>
        <br>
        <div class="row">
            <table id="productsTable" class="table table-striped">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>SKU</th>
                    <th>Vendor</th>
                    <th>Name</th>
                    <th>Cost</th>
                    <th>Price</th>
                    <th>Availability</th>
                    <th>Updated</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.sku }}</td>
                        <td>{{ product.vendor.name }}</td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.cost | money }}</td>
                        <td>{{ product.price | money }}</td>
                        <td>{{ product.amountAvailable }}</td>
                        <td>{{ product.updated | date("m/d/Y  g:ia") }}</td>
                        <td>
                            <a href="{{ path('edit_admin_product', {'productId': product.id}) }}">edit</a>
                            &nbsp;&nbsp;
                            <a href="{{ path('show_admin_product', {'productId': product.id}) }}">view</a>
                            &nbsp;&nbsp;
                            <a href="{{ path('delete_admin_product', {'productId': product.id}) }}">delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascriptsPageSpecific %}
    <script type="text/javascript" src="{{ asset('js/admin-products.js') }}"></script>
{% endblock %}
